@model ShopGYM.ViewModels.Catalog.SanPham.ProductUpdateRequets
@{
	ViewData["Title"] = "Cập nhật sản phẩm";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
	<script src="https://cdn.ckeditor.com/ckeditor5/21.0.0/classic/ckeditor.js"></script>
	<script>
		ClassicEditor
			.create(document.querySelector('#txt_MoTa'), {
				toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ]
			})
			.then(editor => {
				window.editor = editor;
			})
			.catch(err => {
				console.error(err.stack);
			});
	</script>
}
<div class="container-fluid">
    <h1 class="mt-4">Cập nhật sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Cập nhật sản phẩm</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Product">Về danh sách</a>
        </div>

        <div class="card-body">
            <div class="col-md-8">
                <form asp-action="Edit" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="TenSanPham" class="control-label"></label>
                        <input asp-for="TenSanPham" class="form-control" />
                        <span asp-validation-for="TenSanPham" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MoTa" class="control-label"></label>
                        <textarea id="txt_MoTa" asp-for="MoTa" rows="35" class="form-control"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MauSac" class="control-label"></label>
                        <textarea asp-for="MauSac" class="form-control"></textarea>
                        <span asp-validation-for="MauSac" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gia" class="control-label"></label>
                        <textarea asp-for="Gia" type="number" class="form-control"></textarea>
                        <span asp-validation-for="Gia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SoLuongTon" class="control-label"></label>
                        <textarea asp-for="SoLuongTon" class="form-control"></textarea>
                        <span asp-validation-for="SoLuongTon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KichThuoc" class="control-label"></label>
                        <input asp-for="KichThuoc" class="form-control" />
                        <span asp-validation-for="KichThuoc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThumbnailImage" class="control-label"></label>
                        <input asp-for="ThumbnailImage" type="file" class="form-control" />
                        <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
