@model ShopGYM.ViewModels.Catalog.SanPham.ProductCreateRequest

@{
	ViewData["Title"] = "Thêm mới sản phẩm";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Thêm mới sản phẩm</h1>


<div class="row">
	<div class="col-md-8">
		<form asp-action="Create" enctype="multipart/form-data" method="post">
				<div class="container-fluid px-4">
					<ol class="breadcrumb mb-4">
					<li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Trang chủ</a></li>
						<li class="breadcrumb-item active">Thêm mới</li>
					</ol>
					<p>
						<a asp-controller="Product" asp-action="Index" class="btn btn-primary">Về danh sách</a>
					</p>
					<div class="card mb-8">
						<div class="card-body">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label asp-for="TenSanPham"></label>
							<input asp-for="TenSanPham" class="form-control" />
							<span asp-validation-for="TenSanPham" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Gia"></label>
							<input asp-for="Gia" type="number" class="form-control" />
							<span asp-validation-for="Gia" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="MoTa"></label>
							<textarea asp-for="MoTa" rows="5" class="form-control" ></textarea>
							<span asp-validation-for="MoTa" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="MauSac"></label>
							<input asp-for="MauSac" class="form-control" />
							<span asp-validation-for="MauSac" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="KichThuoc"></label>
							<input asp-for="KichThuoc" class="form-control" />
							<span asp-validation-for="KichThuoc" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="SoLuongTon"></label>
							<input asp-for="SoLuongTon" class="form-control" />
							<span asp-validation-for="SoLuongTon" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="ThumbnailImage"></label>
							<input asp-for="ThumbnailImage" type="file" class="form-control" />
							<span asp-validation-for="ThumbnailImage" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input type="submit" value="Lưu lại" class="btn btn-success" />
						</div>
					</div>
				</div>
			</div>

		</form>

	</div>
</div>
